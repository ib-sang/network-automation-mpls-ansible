<config>
  <native xmlns="http://cisco.com/ns/yang/Cisco-IOS-XE-native">
    <router>  
    {% if routing_core is defined %}
        <ospf xmlns="http://cisco.com/ns/yang/Cisco-IOS-XE-ospf">
        <id>1</id>
        {% for routing in routing_core %}
            <network>
                <ip>{{ routing["ip"] }}</ip>
                <mask>{{ routing["mask"] }}</mask>
                <area>{{ routing["area"] }}</area>
            </network>
        {% endfor %}
        </ospf>
    {% endif %}
    </router>
  </native>
</config>